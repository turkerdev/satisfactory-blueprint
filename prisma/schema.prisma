generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  provider    String
  provider_id String
  Blueprint   Blueprint[]

  @@unique([provider, provider_id])
}

model Blueprint {
  id          String  @id
  name        String
  slug        String
  description String?
  publisher   User    @relation(fields: [userId], references: [id])

  userId String
}
